{
    "manifest_version": 3,
    "name": "Lito - Real-time Vision AI Assistant",
    "version": "1.0.0",
    "description": "画面をリアルタイムで解析し、サイドバーからアドバイスをくれるAIパートナー Lito",
    "permissions": [
        "sidePanel",
        "tabs",
        "desktopCapture",
        "activeTab",
        "storage",
        "offscreen"
    ],
    "host_permissions": [
        "https://*.crowdworks.jp/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Litoを開く"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            }
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}